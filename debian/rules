#!/usr/bin/make -f
# -*- makefile -*-
#
#  #export DH_VERBOSE=1

include /usr/share/dpkg/architecture.mk
include /usr/share/mpi-default-dev/debian_defaults

export OMPI_MCA_plm_rsh_agent=/bin/false

CMAKE_FLAGS = -DCMAKE_INSTALL_PREFIX=/usr -C../cmake/presets/std_nolib.cmake -DBUILD_MPI=yes -DBUILD_OMP=yes -DBUILD_EXE=yes -DBUILD_LIB=yes -DBUILD_SHARED_LIBS=yes

BUILD_DIR = obj-$(DEB_BUILD_GNU_TYPE)

%:
	dh $@ --buildsystem=cmake --builddirectory=$(BUILD_DIR)

override_dh_auto_configure:
	mkdir -p $(BUILD_DIR)
	(cd $(BUILD_DIR) && cmake $(CMAKE_FLAGS) ../cmake)
